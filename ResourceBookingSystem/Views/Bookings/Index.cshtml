@model IEnumerable<ResourceBookingSystem.Models.Booking>

@{
    ViewData["Title"] = "All Bookings";
}

<h1>All Bookings</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Booking</a>
</p>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Resource</th>
            <th>Booked By</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Purpose</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Resource.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookedBy)
                </td>
                <td>
                    @item.StartTime.ToString("g") <!-- General date/time format -->
                </td>
                <td>
                    @item.EndTime.ToString("g") <!-- General date/time format -->
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Purpose)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No bookings found. Would you like to <a asp-action="Create">create one</a>?
    </div>
}